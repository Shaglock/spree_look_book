<% content_for :page_title do %>
  <%= Spree.t(:new_look_book) %>
<% end %>

<% content_for :page_actions do %>
  <%= back_to_list_button(Spree::LookBook.model_name.human, admin_look_books_path) %>
<% end %>

<div data-hook="admin_user_new_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @look_book } %>
</div>

<div data-hook="admin_user_new_form">
  <%= simple_form_for [:admin, @look_book], url: spree.admin_look_books_url, method: :post do |f| %>

    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_user_new_form_buttons">
      <%= render partial: 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>
